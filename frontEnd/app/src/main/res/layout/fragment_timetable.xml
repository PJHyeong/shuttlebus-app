<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- 메뉴 이동 버튼 -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:src="@drawable/menu_img"
        android:background="@android:color/transparent"
        android:contentDescription="메뉴로 이동"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginBottom="8dp" />

    <!-- 노선 선택 탭 -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tabBtnRoute1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="명지대 → 기흥역"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/tabBtnRoute2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="기흥역 → 명지대"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/tabBtnRoute3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="시내 셔틀"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/tabBtnRoute4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="진입로 셔틀 명지대역"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/tabBtnRoute5"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="주말/공휴일"
                android:textSize="12sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ✅ FrameLayout: 헤더를 동적으로 교체할 컨테이너 -->
    <FrameLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" />

    <!-- 시간표 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTimetable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />
</LinearLayout>
