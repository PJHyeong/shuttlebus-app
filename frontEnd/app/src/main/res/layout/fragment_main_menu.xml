<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/splashscreenimg"
            android:contentDescription="앱 아이콘"
            android:background="@drawable/round_bg"
            android:padding="8dp"
            android:elevation="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ShuttleBus App"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- 메뉴 카드들 -->
    <GridLayout
        android:id="@+id/gridMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:padding="16dp"
        android:alignmentMode="alignMargins"
        android:rowCount="2"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- 지도 메뉴 -->
        <LinearLayout
            android:id="@+id/Map"
            style="@style/MenuCard"
            android:background="@drawable/selector_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/map_new_img"
                style="@style/MenuIcon" />

            <TextView
                android:text="지도"
                style="@style/MenuText" />
        </LinearLayout>

        <!-- 시간표 메뉴 -->
        <LinearLayout
            android:id="@+id/Schedule"
            style="@style/MenuCard"
            android:background="@drawable/selector_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/schedule_img"
                style="@style/MenuIcon" />

            <TextView
                android:text="시간표"
                style="@style/MenuText" />
        </LinearLayout>

        <!-- 옵션 메뉴 -->
        <LinearLayout
            android:id="@+id/Option"
            style="@style/MenuCard"
            android:background="@drawable/selector_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/option_img"
                style="@style/MenuIcon" />

            <TextView
                android:text="옵션"
                style="@style/MenuText" />
        </LinearLayout>

        <!-- 공지사항 메뉴 -->
        <LinearLayout
            android:id="@+id/Notice"
            style="@style/MenuCard"
            android:background="@drawable/selector_card_bg"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/notice_new_img"
                style="@style/MenuIcon" />

            <TextView
                android:text="공지사항"
                style="@style/MenuText" />
        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>