<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="2"
    android:background="@color/white"
    android:padding="24dp">

    <!-- 지도 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Map"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/map_img"
            android:contentDescription="지도" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지도"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 시간표 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Schedule"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/schedule_img"
            android:contentDescription="시간표" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간표"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 옵션 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Option"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/option_img"
            android:contentDescription="옵션" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옵션"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- 공지사항 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Notice"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/notice_img"
            android:contentDescription="공지사항" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp" />
    </LinearLayout>

</GridLayout>
