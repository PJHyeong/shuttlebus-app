    <?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/white">


        <!-- 뒤로가기 버튼 -->
        <ImageButton
            android:id="@+id/btnBackDetail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/previous_img"
            android:background="@android:color/transparent"
            android:contentDescription="뒤로가기"
            android:elevation="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- 1. 제목/날짜/내용: 스크롤 X (짧으니) -->
        <LinearLayout
            android:id="@+id/layoutNoticeContent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnBackDetail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/textDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지 제목"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textDetailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2025-05-17"
                android:textSize="12sp"
                android:textColor="#888888"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textDetailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="공지 내용..."
                android:textSize="16sp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>

        <!-- 2. 댓글 리스트(RecyclerView, 가변 높이) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerComments"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            app:layout_constraintTop_toBottomOf="@id/layoutNoticeContent"
            app:layout_constraintBottom_toTopOf="@id/commentInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- 3. 하단 고정 댓글 입력 + 등록 버튼 -->
        <LinearLayout
            android:id="@+id/commentInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/editComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="댓글을 입력하세요"/>
            <Button
                android:id="@+id/btnSendComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
