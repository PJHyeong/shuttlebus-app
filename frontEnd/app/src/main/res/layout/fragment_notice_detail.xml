<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">


    <ImageView
        android:id="@+id/bgCharacter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/notice_page"
        android:alpha="0.07"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 🔙 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnBackDetail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/previous_img"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="뒤로가기"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 🔹 공지 영역 -->
    <LinearLayout
        android:id="@+id/layoutNoticeContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackDetail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지 제목"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-05-17"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="공지 내용..."
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"/>
    </LinearLayout>



    <!-- 🗨️ 댓글 타이틀 -->
    <TextView
        android:id="@+id/commentHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="댓글"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#0052CC"
        android:padding="12dp"
        android:background="#F0F7FF"
        app:layout_constraintTop_toBottomOf="@id/layoutNoticeContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 📝 댓글 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F8FBFF"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/commentHeader"
        app:layout_constraintBottom_toTopOf="@id/commentInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <!-- 💬 댓글 입력창 -->
    <LinearLayout
        android:id="@+id/commentInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/editComment"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:hint="댓글을 입력하세요"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btnSendComment"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/send_btn"
            android:background="@android:color/transparent"
            android:contentDescription="댓글 등록"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
